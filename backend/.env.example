# ============================================
# App Settings
APP_NAME="Logged Fitness Tracker API"
APP_VERSION="1.0.0"
DEBUG=false
DB_AUTO_INIT=false

# Server
HOST=0.0.0.0
PORT=8000

# --------------------------------------------
# Database
# --------------------------------------------
# Format: postgresql+asyncpg://[user]:[password]@[host]/[database]
DATABASE_URL=postgresql+asyncpg://logged:logged_secret@db:5432/logged_db
DATABASE_ECHO=false

# If using a separate auth DB, set this to a different connection string
AUTH_DATABASE_URL=postgresql+asyncpg://logged:logged_secret@db:5432/logged_db

# Redis (caching/rate limiting)
REDIS_URL=redis://redis:6379/0

# --------------------------------------------
# JWT Authentication
# --------------------------------------------
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=replace-with-a-secure-random-hex
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Magic Link
MAGIC_LINK_EXPIRE_MINUTES=15
MAGIC_LINK_BASE_URL=logged://auth/verify

# --------------------------------------------
# AI Provider
# --------------------------------------------
# AI_PROVIDER can be "anthropic" or "openai"
AI_PROVIDER=anthropic

# Anthropic
ANTHROPIC_API_KEY=replace-with-your-key
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_VISION_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096

# OpenAI (optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_VISION_MODEL=gpt-4-vision-preview
OPENAI_BASE_URL=

# --------------------------------------------
# Open Food Facts
# --------------------------------------------
OFF_API_URL=https://world.openfoodfacts.org/api/v2
OFF_USER_AGENT=Logged Fitness Tracker/1.0 (contact@logged.app)

# --------------------------------------------
# Rate Limiting / CORS
# --------------------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=60
CORS_ORIGINS=["https://your-frontend.example"]
