# Ada Fitness Tracker - Environment Configuration

# App Settings
APP_NAME="Ada Fitness Tracker API"
APP_VERSION="1.0.0"
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://ada:ada_secret@localhost:5432/ada_db
DATABASE_ECHO=false

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Magic Link
MAGIC_LINK_EXPIRE_MINUTES=15
MAGIC_LINK_BASE_URL=ada://auth/verify

# Email (for magic links - optional for dev)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password
# SMTP_FROM_EMAIL=noreply@ada-fitness.app

# OpenAI API (required for AI features)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_VISION_MODEL=gpt-4-vision-preview
# OPENAI_BASE_URL=  # Optional: for OpenAI-compatible providers

# Open Food Facts
OFF_API_URL=https://world.openfoodfacts.org/api/v2
OFF_USER_AGENT=Ada Fitness Tracker/1.0 (contact@ada-fitness.app)

# Apple Sign In (optional)
# APPLE_CLIENT_ID=com.yourcompany.ada
# APPLE_TEAM_ID=YOUR_TEAM_ID
# APPLE_KEY_ID=YOUR_KEY_ID
# APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# CORS
CORS_ORIGINS=["*"]
